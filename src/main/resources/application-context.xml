<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd
	   					   http://www.springframework.org/schema/context
	   					   http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />

    <bean id="imageGenerator" class="com.backfield.imagegenerator.ImageGenerator" />

    <bean id="imageDrawFactory" class="com.backfield.imagegenerator.ImageDrawFactory">
        <constructor-arg name="squareSize" value="20" />
        <constructor-arg name="numberOfSquares" value="10" />
    </bean>

    <bean id="imageDraw" factory-bean="imageDrawFactory" factory-method="create" >
        <property name="lowerLeftDrawable" ref="lowerLeftDrawable"/>
        <property name="lowerRightDrawable" ref="lowerRightDrawable"/>
        <property name="upperLeftDrawable" ref="upperLeftDrawable"/>
        <property name="upperRightDrawable" ref="upperRightDrawable"/>
    </bean>

    <bean id="lowerLeftDrawable" class="com.backfield.imagegenerator.LowerLeftDrawable">
    </bean>
    <bean id="lowerRightDrawable" class="com.backfield.imagegenerator.LowerRightDrawable">
    </bean>
    <bean id="upperLeftDrawable" class="com.backfield.imagegenerator.UpperLeftDrawable"/>
    <bean id="upperRightDrawable" class="com.backfield.imagegenerator.UpperRightDrawable"/>

</beans>